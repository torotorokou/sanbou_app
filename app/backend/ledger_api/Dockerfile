## syntax=docker/dockerfile:1.6
# =========================
# ledger_api (LibreOffice ç›´å‘¼ã³ç‰ˆ)
# - unoconv / python3-uno ã¯ä¸è¦
# - LibreOffice ã¨æ—¥æœ¬èªãƒ•ã‚©ãƒ³ãƒˆã®ã¿ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
# =========================

# ---- builder: wheelåŒ–ã§é«˜é€Ÿå†ãƒ“ãƒ«ãƒ‰ ----
FROM python:3.11-slim AS builder
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1
WORKDIR /build
ARG SERVICE_DIR=ledger_api
ARG BASE_PATH=backend

# ã‚µãƒ¼ãƒ“ã‚¹å€‹åˆ¥ã® requirements ã‚’ãƒ«ãƒ¼ãƒˆ build context ã‹ã‚‰ã‚³ãƒ”ãƒ¼
COPY ${BASE_PATH}/${SERVICE_DIR}/requirements.txt requirements.txt
COPY ${BASE_PATH}/${SERVICE_DIR}/requirements-dev.txt requirements-dev.txt
ARG INSTALL_DEV=false
RUN --mount=type=cache,target=/root/.cache/pip \
    pip wheel --no-deps -r requirements.txt -w /wheels \
    && if [ "$INSTALL_DEV" = "true" ]; then \
         pip wheel --no-deps -r requirements-dev.txt -w /wheels; \
       fi

# ---- runtime ----
FROM python:3.11-slim AS runtime
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1 PYTHONPATH=/backend
WORKDIR /backend
ARG SERVICE_DIR=ledger_api
ARG BASE_PATH=backend

# LibreOffice ã¨æ—¥æœ¬èªãƒ•ã‚©ãƒ³ãƒˆã€ãƒ˜ãƒ«ã‚¹ãƒã‚§ãƒƒã‚¯ç”¨ curl
RUN apt-get update && apt-get install -y --no-install-recommends \
      libreoffice \
      fonts-noto-cjk fonts-noto-cjk-extra \
      fonts-ipafont-mincho fonts-ipafont-gothic \
      curl ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# å¿µã®ãŸã‚ libreoffice ã®å®Ÿä½“ãƒ‘ã‚¹ã‚’ PATH ã«è¿½åŠ ï¼ˆå¤šãã®ç’°å¢ƒã§ã¯ä¸è¦ï¼‰
ENV PATH="/usr/lib/libreoffice/program:${PATH}"

# érootãƒ¦ãƒ¼ã‚¶ãƒ¼
RUN useradd -m appuser

# Python ä¾å­˜é–¢ä¿‚
COPY --from=builder /wheels /wheels
COPY ${BASE_PATH}/${SERVICE_DIR}/requirements.txt requirements.txt
COPY ${BASE_PATH}/${SERVICE_DIR}/requirements-dev.txt requirements-dev.txt
ARG INSTALL_DEV=false
RUN pip install --no-cache-dir /wheels/*.whl \
    && if [ "$INSTALL_DEV" = "true" ]; then \
         pip install --no-cache-dir -r requirements-dev.txt; \
       fi

# ã‚¢ãƒ—ãƒªæœ¬ä½“ã¨å…±æœ‰ã‚³ãƒ¼ãƒ‰
COPY ${BASE_PATH}/backend_shared/ /backend/backend_shared
COPY ${BASE_PATH}/${SERVICE_DIR}/app /backend/app
# --- ãƒã‚¹ã‚¿CSV / ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆé¡ã‚’å«ã‚ã‚‹ (dev ã¯ volume ã§å­˜åœ¨ã€stg/prod ã¯ã‚¤ãƒ¡ãƒ¼ã‚¸ã«åŒæ¢±ãŒå¿…è¦) ---
COPY config /backend/config

# --- build-time sanity checks (fail fast if sources missing) ---
RUN test -d /backend/app/api/endpoints/reports \
 && python - <<'PY'
import importlib, sys
sys.path.insert(0, '/backend')
importlib.import_module('app.api.endpoints.reports')
print('Verified import: app.api.endpoints.reports')
PY

# ãƒ­ã‚°å‡ºåŠ›ç”¨ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã‚’ä½œæˆã—æ›¸ãè¾¼ã¿æ¨©é™ã‚’ä»˜ä¸
RUN mkdir -p /backend/app/st_app/logs \
  && chown -R appuser:appuser /backend

# main_paths.yaml ã§å‚ç…§ã•ã‚Œã‚‹æƒ³å®šã® data / logs ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã‚’äº‹å‰ç”Ÿæˆï¼ˆå¿…è¦ãªã‚‰ä¸Šæ›¸ãèª¿æ•´ï¼‰
RUN mkdir -p /backend/app/st_app/data/input /backend/app/st_app/data/output \
  && mkdir -p /backend/app/st_app/logs \
  && chown -R appuser:appuser /backend/app/st_app/data /backend/app/st_app/logs

# startup ã‚¨ãƒ³ãƒˆãƒªãƒã‚¤ãƒ³ãƒˆã‚¹ã‚¯ãƒªãƒ—ãƒˆã‚’ root æ¨©é™ã§é…ç½®ã—å®Ÿè¡Œæ¨©é™ä»˜ä¸
COPY --chown=appuser:appuser --chmod=0755 ${BASE_PATH}/${SERVICE_DIR}/startup.sh /backend/startup.sh

# ğŸ”½ è¿½åŠ : preflight ã‚¹ã‚¯ãƒªãƒ—ãƒˆã‚’ã‚³ãƒ”ãƒ¼
COPY --chown=appuser:appuser ${BASE_PATH}/${SERVICE_DIR}/startup_preflight.py /backend/startup_preflight.py

ENV BASE_ST_APP_DIR=/backend/app/st_app
USER appuser
EXPOSE 8000
HEALTHCHECK --interval=30s --timeout=5s --retries=3 CMD curl -fsS http://localhost:8000/health >/dev/null || exit 1
ENTRYPOINT ["/backend/startup.sh"]
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
