services:
  frontend:
    build:
      context: ../app/frontend
      dockerfile: Dockerfile
      target: dev
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    command: ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
    ports:
      - "${DEV_FRONTEND_PORT:-5173}:5173"
    volumes:
      - node_modules_dev:/app/node_modules
      - ../app/frontend:/app
    environment:
      - DOCKER=true
    networks:
      - app-net

  ai_api:
    build:
      context: ../app/backend
      dockerfile: ai_api/Dockerfile
      target: dev
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    command: >
      uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
      --reload-dir /backend/app
      --reload-dir /opt/backend_shared/src
    ports:
      - "${DEV_AI_API_PORT:-8001}:8000"
    volumes:
      - ../app/backend/ai_api/app:/backend/app:rw
      - ../app/backend/backend_shared:/opt/backend_shared:rw
      - ../app/config:/backend/config
    environment:
      - WATCHFILES_FORCE_POLLING=1
    depends_on:
      - db
    networks:
      - app-net

  ledger_api:
    build:
      context: ../app/backend
      dockerfile: ledger_api/Dockerfile
      target: dev
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    user: "0:0"
    command: >
      uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
      --reload-dir /backend/app
      --reload-dir /opt/backend_shared/src
    ports:
      - "${DEV_LEDGER_API_PORT:-8002}:8000"
    volumes:
      - ../app/backend/ledger_api/app:/backend/app:rw
      - ../app/backend/backend_shared:/opt/backend_shared:rw
      - ../app/config:/backend/config
      # base compose „ÅÆ secrets „Éû„Ç¶„É≥„Éà„Åå override „ÅßÊ∂à„Åà„Çã„Åü„ÇÅÂÜçÊåáÂÆö
      - ../secrets:/backend/secrets:ro
    environment:
      GOOGLE_APPLICATION_CREDENTIALS: /backend/secrets/dev_key.json
      WATCHFILES_FORCE_POLLING: "1"
      REPORT_ARTIFACT_URL_PREFIX: "/reports/artifacts"
    depends_on:
      - db
    networks:
      - app-net

  core_api:
    build:
      context: ../app/backend
      dockerfile: core_api/Dockerfile
      target: dev
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    command: >
      uvicorn app.app:app --host 0.0.0.0 --port 8000 --reload
      --reload-dir /backend/app
      --reload-dir /opt/backend_shared/src
    ports:
      - "${DEV_CORE_API_PORT:-8003}:8000"
    volumes:
      - ../app/backend/core_api/app:/backend/app:rw
      - ../app/backend/core_api/migrations:/backend/migrations:rw
      - ../app/backend/backend_shared:/opt/backend_shared:rw
      - ../app/config:/backend/config
    environment:
      - WATCHFILES_FORCE_POLLING=1
    depends_on:
      - db
    networks:
      - app-net

  plan_worker:
    build:
      context: ../app/backend
      dockerfile: plan_worker/Dockerfile
      target: dev
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    command: ["python", "-m", "app.worker"]
    volumes:
      - ../app/backend/plan_worker/app:/backend/app:rw
      - ../app/backend/backend_shared:/opt/backend_shared:rw
    environment:
      - WATCHFILES_FORCE_POLLING=1
    depends_on:
      - db
    networks:
      - app-net
    restart: unless-stopped

  rag_api:
    build:
      context: ../app/backend
      dockerfile: rag_api/Dockerfile
      target: dev
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    command: ["bash", "startup.sh"]
    ports:
      - "${DEV_RAG_API_PORT:-8004}:8000"
    volumes:
      - ../app/backend/rag_api/app:/backend/app:rw
      - ../app/backend/backend_shared:/opt/backend_shared:rw
      - ../app/config:/backend/config
      - ../secrets:/backend/secrets:ro
    environment:
      GOOGLE_APPLICATION_CREDENTIALS: /backend/secrets/dev_key.json
      CATEGORY_QUESTION_TEMPLATES_WITH_TAGS: /backend/config/category_question_templates_with_tags.yaml
      DEV_RELOAD: "1"
      LOCAL_DATA_DIR: /backend/local_data/master
      RAG_GCS_URI: gs://sanbouapp-dev/rag_api/object_haikibutu/master/
      WATCHFILES_FORCE_POLLING: "1"
    depends_on:
      - db
    networks:
      - app-net

  manual_api:
    build:
      context: ../app/backend
      dockerfile: manual_api/Dockerfile
      target: dev
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    command: ["bash", "startup.sh"]
    ports:
      - "${DEV_MANUAL_API_PORT:-8005}:8000"
    volumes:
      - ../app/backend/manual_api/app:/backend/app:rw
      - ../app/backend/backend_shared:/opt/backend_shared:rw
    environment:
      MANUAL_FRONTEND_BASE_URL: ${MANUAL_FRONTEND_BASE_URL:-http://localhost:5173}
    networks:
      - app-net

  db:
    image: postgres:15-alpine
    env_file:
      - ../env/.env.common
      - ../env/.env.local_dev
    ports:
      - "${DEV_DB_PORT:-5432}:5432"
    volumes:  
      # - db_data:/var/lib/postgresql/data
      # üëá Postgres„Éá„Éº„Çø„Çí„Éõ„Çπ„ÉàÂÅ¥„Å´‰øùÂ≠ò
      - ../data/postgres:/var/lib/postgresql/data

    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U myuser -d sanbou_dev"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - app-net

volumes:
  node_modules_dev:
    driver: local
  # db_data named volume removed; using host path ../data/postgres instead

networks:
  app-net:
    driver: bridge
